{
  "name": "lambda-email",
  "version": "1.0.0",
  "bin": {
    "lambda-email": "bin/lambda-email.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "NODE_ENV=production npm run build && cdk deploy",
    "synth": "cdk synth",
    "local": "ts-node lambda/send-email.ts",
    "dev": "NODE_ENV=development USE_MOCK_SES=true nodemon --watch lambda --exec ts-node lambda/send-email-local.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "aws-cdk": "^2.147.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.600.0",
    "aws-cdk-lib": "^2.147.0",
    "constructs": "^10.3.0",
    "dotenv": "^17.2.3",
    "source-map-support": "^0.5.21"
  },
  "author": "",
  "license": "ISC",
  "description": "AWS CDK project for Lambda-based email service using SES"
}
